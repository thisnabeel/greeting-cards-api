                                    </a>
                                </div>
                                <section class="bottom-card">
                                    <h1 class="text-center product-cost">$<%= p.price %></h1>
                                    <h4 class="text-center product-title"><%= p.title.gsub(/\(/, "<br>(").html_safe %></h4>
                                    <small class="text-center" style="display:block;">Minimum <%= p.minimum %></small>
                                    <small class="text-center" style="display:block;"><%= p.group_size %> Per Order</small>
                                </section>
                            </div>
                        </div>
                    </div>
                    <% end %>

                </div>
            </div>
