<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<%= f.label :title %>
<%= f.text_field :title, :class => "form-control" %>
<%= f.label :image_url %>
<%= f.text_field :image_url, :class => "form-control" %>
<%= f.label :description %>
<%= f.text_area :description, :class => "form-control" %>
<%= f.label :price %>
<%= f.number_field :price, :class => "form-control" %>
<%= f.label :minimum %>
<%= f.number_field :minimum, :class => "form-control" %>
<%= f.label :maximum %>
<%= f.number_field :maximum, :class => "form-control" %>
<%= f.label :group_size %>
<%= f.number_field :group_size, :class => "form-control" %>

<%= f.select(:category_id, Category.all.collect {|u| [u.title, u.id]}, :prompt => 'Select', :class => "form-control") %>


<%= f.text_field :tags, :class => "form-control" %>

<br>

  <div class="actions">
    <%= f.submit :class => "btn btn-success" %>
  </div>
<% end %>

